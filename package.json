{
  "name": "DocScanPro",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "echo \"Android build is planned for a future release\" && exit 0",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepare": "husky",
    "start": "react-native start",
    "clean": "watchman watch-del-all || true && rm -rf node_modules .yarn/cache && yarn install && cd ios && rm -rf Pods Podfile.lock build && pod install && cd ..",
    "test": "jest",
    "pods": "cd ios && pod install"
  },
  "dependencies": {
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/native-stack": "^7.3.26",
    "@shopify/flash-list": "^1.6.2",
    "date-fns": "^4.1.0",
    "pdf-lib": "^1.17.1",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-document-picker": "^9.3.1",
    "react-native-document-scanner-plugin": "^1.0.1",
    "react-native-fs": "^2.20.0",
    "react-native-gesture-handler": "^2.28.0",
    "react-native-image-filter-kit": "^0.8.0",
    "react-native-image-picker": "^8.2.1",
    "react-native-image-resizer": "^1.4.5",
    "react-native-mmkv": "^2.12.2",
    "react-native-orientation-locker": "^1.7.0",
    "react-native-reanimated": "^3.19.1",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.16.0",
    "react-native-share": "^12.2.0",
    "react-native-text-recognition": "1.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "20.0.0",
    "@react-native-community/cli-platform-android": "20.0.0",
    "@react-native-community/cli-platform-ios": "20.0.0",
    "@react-native/babel-preset": "0.81.4",
    "@react-native/eslint-config": "0.81.4",
    "@react-native/metro-config": "0.81.4",
    "@react-native/typescript-config": "0.81.4",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "jest": "^29.6.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "react-test-renderer": "19.1.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@9.0.0"
}
